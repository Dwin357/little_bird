<%= form_for(:session) do |f| %>
  <div class='form-group'>  
    <%= f.label :username %>
    <% if session %>
      <%= f.text_field :username, placeholder: "AwsomeSauce", value: session[:username] %>
    <% else %>
      <%= f.text_field :username, placeholder: "AwsomeSauce" %>
    <% end %>
  </div>
  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Pa$$word" %>
  </div>
  <div class='form-group'>
    <%= f.label :password_confirm %>
    <%= f.password_field :password_confirm, placeholder: "Pa$$word" %>
  </div>
  <div class='form-group'>
    <%= f.submit "Login" %>
  </div>
<% end %>