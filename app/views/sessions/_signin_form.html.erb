<form method='post' action='/sessions'>
  <%= token_tag nil %>
  <div class='form-group'>  
    <label for='username'>Username</label>
    <% if session[:username] %>
      <input type='text' name='session[username]' placeholder="AwsomeSauce" value=<%=session[:username] %>>
    <% else %>
      <input type='text' name='session[username]' placeholder="AwsomeSauce">    
    <% end %>
  </div>
  <div class='form-group'>
    <label for='password'>Password</label>
    <input type='password' name='session[password]' placeholder="Pa$$word" %>
  </div>
  <div class='form-group'>
    <input type='submit' value='Login'>
  </div>
</form>